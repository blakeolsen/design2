<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="blakeolsen.cmu.design2.icrutch.crutchcontrol.MainActivity">

    <TextView
        android:id="@+id/h1Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estimated Force Applied"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/update"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="Update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <com.jjoe64.graphview.GraphView
        android:layout_width="381dp"
        android:layout_height="410dp"
        android:id="@+id/graph"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/h1Title"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/recommendedWeight"
        android:layout_width="187dp"
        android:layout_height="61dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="0dp"
        android:ems="10"
        android:inputType="number"
        android:text="Weight Limit"
        app:layout_constraintBottom_toTopOf="@+id/update"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/userWeight"
        android:layout_width="183dp"
        android:layout_height="59dp"
        android:ems="10"
        android:inputType="number"
        android:text="User Weight"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/update" />

</android.support.constraint.ConstraintLayout>
